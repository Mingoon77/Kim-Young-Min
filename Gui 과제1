import javax.swing.*;
import java.awt.*;

//과제1 - 2020011932 - 김영민

public class Calculator extends JFrame {
    public Calculator() {
        //제목
        setTitle("계산기");
        //종료시켰을때 실행 파일도 함께 종료
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        //사이즈설정
        setSize(520, 250);

        Container container = getContentPane();

        //컨테이너 배경색 회색으로 설정
        container.setBackground(Color.GRAY);
        //버튼 패널과 텍스트 필드를 구분하기 위한 레이아웃 설정
        container.setLayout(new BorderLayout());

        //텍스트필드
        JTextField text = new JTextField("0.");
        //텍스트 사용불가능 설정
        text.setEnabled(false);
        container.add(BorderLayout.NORTH, text);

        //버튼 패널 생성
        JPanel btnPanel = new JPanel();
        //줄 5개, 열 5개, 위옆차이를 3px로 설정
        btnPanel.setLayout(new GridLayout(5,5,3,3));

        //1번째줄
        //버튼생성
        JButton backSpace = new JButton("Backspace");
        //버튼색 노랑색으로 지정
        backSpace.setBackground(Color.yellow);
        //버튼 텍스트색 파랑색으로 지정
        backSpace.setForeground(Color.BLUE);
        //패널에 버튼 추가
        btnPanel.add(backSpace);

        JButton blank1 = new JButton("");
        blank1.setBackground(Color.yellow);
        btnPanel.add(blank1);

        JButton blank2 = new JButton("");
        blank2.setBackground(Color.yellow);
        btnPanel.add(blank2);

        JButton cE = new JButton("CE");
        cE.setBackground(Color.yellow);
        cE.setForeground(Color.red);
        btnPanel.add(cE);

        JButton c = new JButton("C");
        c.setBackground(Color.yellow);
        c.setForeground(Color.red);
        btnPanel.add(c);

        //2번째줄
        JButton seven = new JButton("7");
        seven.setBackground(Color.yellow);
        seven.setForeground(Color.BLUE);
        btnPanel.add(seven);

        JButton eight = new JButton("8");
        eight.setBackground(Color.yellow);
        eight.setForeground(Color.BLUE);
        btnPanel.add(eight);

        JButton nine = new JButton("9");
        nine.setBackground(Color.yellow);
        nine.setForeground(Color.BLUE);
        btnPanel.add(nine);

        JButton slash = new JButton("/");
        slash.setBackground(Color.yellow);
        slash.setForeground(Color.red);
        btnPanel.add(slash);

        JButton sqrt = new JButton("sqrt");
        sqrt.setBackground(Color.yellow);
        sqrt.setForeground(Color.red);
        btnPanel.add(sqrt);

        //3번째줄
        JButton four = new JButton("4");
        four.setBackground(Color.yellow);
        four.setForeground(Color.BLUE);
        btnPanel.add(four);

        JButton five = new JButton("5");
        five.setBackground(Color.yellow);
        five.setForeground(Color.BLUE);
        btnPanel.add(five);

        JButton six = new JButton("6");
        six.setBackground(Color.yellow);
        six.setForeground(Color.BLUE);
        btnPanel.add(six);

        JButton x = new JButton("x");
        x.setBackground(Color.yellow);
        x.setForeground(Color.red);
        btnPanel.add(x);

        JButton percent = new JButton("%");
        percent.setBackground(Color.yellow);
        percent.setForeground(Color.red);
        btnPanel.add(percent);

        //4번째줄
        JButton one = new JButton("1");
        one.setBackground(Color.yellow);
        one.setForeground(Color.BLUE);
        btnPanel.add(one);

        JButton two = new JButton("2");
        two.setBackground(Color.yellow);
        two.setForeground(Color.BLUE);
        btnPanel.add(two);

        JButton three = new JButton("3");
        three.setBackground(Color.yellow);
        three.setForeground(Color.BLUE);
        btnPanel.add(three);

        JButton stick = new JButton("-");
        stick.setBackground(Color.yellow);
        stick.setForeground(Color.red);
        btnPanel.add(stick);

        JButton oneSlashX = new JButton("1/x");
        oneSlashX.setBackground(Color.yellow);
        oneSlashX.setForeground(Color.red);
        btnPanel.add(oneSlashX);
